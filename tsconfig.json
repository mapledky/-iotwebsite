{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
	"noImplicitAny": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/GenerateForm/GenerateForm.d.ts",
    "src/modules/document/api/test.js",
    "src/utils/format.js"
, "src/components/NewIconTree/pinyin.js"  ],
  "exclude": ["node_modules"]
}
